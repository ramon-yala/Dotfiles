#start
sxhkd &
picom -b &         
xsetroot -cursor_name left_ptr &
plank &

#set polybar
#$HOME/.config/polybar/shades/launch.sh &
$HOME/.config/polybar/shapes/launch.sh &

#set wallpaper
feh --bg-fill $HOME/Imágenes/Img2.jpeg

#monitor´s
bspc monitor -d I II III IV V VI VII VIII IX
#bspc monitor -d 一 二 三 四 五 六 七 八 九
#bscp monitor -d 1 2 3 4 5 6 7 8 9

#Theme for bspwm -Custom-
bspc config normal_border_color "#c7c7c7"
bspc config active_border_color "#c7c7c7"
bspc config focused_border_color "#ff00ae"
bspc config presel_feedback_color "#dc57b3"

#Gaps
bspc config border_width         2.5
bspc config window_gap      20

bspc config automatic_scheme	  spiral
bspc config split_ratio           0.50
bspc config borderless_monocle    true
bspc config gapless_monocle	  false
bspc config single_monocle        true
bspc config focus_follows_pointer true
bspc config focused_frame_opacity 0.5
bspc config normal_frame_opacity  1
bspc config border_radius         15.0

#Enable touchpad gestures       
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Tapping Enabled" 1
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Natural Scrolling Enabled" 1
